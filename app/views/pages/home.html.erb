<div class="full-page">
  <div class="header">
    <h1>Doginder.</h1>
  </div>
  <div class="slogan">
    <h2>Pour jouer à la baballe à plusieurs!</h2>
  </div>
  <div id="core-search">
    <%= form_tag dogs_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: " code postal"
    %>
    <%= select :queryinterest,
      params[:queryinterest],
      ["manger", "Nager", "Voler des chaussettes", "Courir en montagne", "Faire la sieste", "Creuser des trous",
      "Chasser les chats", "Ronger mon nonos", "Jouer à la baballe", "Canicross", "Agility", "Suivre une piste","Attraper les méchants",
      "Mordre le facteur", "Jouer au freesbee"],include_blank: "ce que j'aime faire"
    %>
      <%= submit_tag "Recherche", class: "tapbar-chat bouton" %>
      <% end %>
    <div id="core_dog">
      <%= link_to "Voir tous les compagnons", dogs_path, class: "tapbar-chat bouton"%>
    </div>
  </div>
</div>
