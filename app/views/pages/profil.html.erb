<h1> profil  </h1>

<div class = profil-card>
  <%= image_tag @user.image_avatar, size:"150x150" %>
  <div class = "profil-content">
    <p><%= @user.description  %></p>
    <p><%= @user.email %></p>
    <p><%= @user.pseudo %></p>
    <p><%= @user.first_name %></p>
    <p><%= @user.last_name %></p>

    <p> My animals: </p>
    <% @user.dogs.each do |dog| %>
    <%= dog.name %>
    <% end %>
  </div>
</div>
