<h1> profil  </h1>

<div class = profil-card>
<% if @user.id == current_user.id %>
  <%= image_tag @user.image_avatar, size:"150x150" %>
  <div class = "profil-content">
    <p><%= @user.description  %></p>
    <p><%= @user.email %></p>
    <p><%= @user.pseudo %></p>
    <p><%= @user.first_name %></p>
    <p><%= @user.last_name %></p>

    <%= link_to "create a new dog", new_dog_path%>

    <p> My animals: </p>
    <% @user.dogs.each do |dog| %>
    <%= dog.name %>
    <% end %>
  </div>
    <% else %>
    <div class = "profil-content">
    <%= image_tag @user.image_avatar, size:"150x150" %>
    <p><%= @user.pseudo %></p>
    <p><%= @user.description  %></p>

    <% end %>
    </div>
</div>
