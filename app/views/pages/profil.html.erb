<div class = "card-general">
  <div class="head">
    <h1>Doginder.</h1>
  </div>
  <div class="infos-dog">
    <% if @user.id == current_user.id %>


      <div class="dog-name">
        <h2><%= @user.first_name %></h2>
      </div>
      <div class="description">
        <%= image_tag @user.image_avatar, size:"150x150" %>
        <div>
          <%= link_to "create a new dog", new_dog_path%>
          <p> My animals: </p>
            <% @user.dogs.each do |dog| %>
              <%= dog.name %>
            <% end %>
        </div>
        <p>Pseudo :<%= @user.pseudo %></p>
        <p>Pr√©nom :<%= @user.first_name %></p>
        <p>Nom :<%= @user.last_name %></p>
        <p>Courriel :<%= @user.email %></p>
        <p>Description :<%= @user.description  %></p>
      </div>
        <div class="infos-boutons">
          <div class="retour">
            <a href="/dogs">retour</a>
          </div>
        </div>
    </div>
     <% else %>
        <div class="dog-name">
          <h2><%= @user.first_name %></h2>
        </div>
        <div class = "profil-content">
          <%= image_tag @user.image_avatar, size:"150x150" %>
          <p><%= @user.pseudo %></p>
          <p><%= @user.description  %></p>
        </div>
      <% end %>



